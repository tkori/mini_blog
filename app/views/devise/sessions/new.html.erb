<div class="form">
  <div class="row">
    <div class="col s6 offset-s3">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="field">
        <%= f.label :email, 'メールアドレス' %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "materialize-textarea" %>
      </div>

      <div class="field">
        <%= f.label :password, 'パスワード' %>
        <%= f.password_field :password, autocomplete: "current-password", class: "materialize-textarea" %>
      </div>

      <div class="actions">
        <%= f.submit "ログイン", class: "waves-effect waves-light btn cyan" %>
      </div>
    <% end %>
    </div>
  </div>
</div>

